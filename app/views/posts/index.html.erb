<div class="d-flex align-items-center">
  <h1>掲示板一覧</h1>
  <div class="ml-auto posts__linkBox">
    <%= form_tag posts_path, method: :get, class: 'posts__searchForm' do %>
      <%= select_tag :category_id,
                    options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
                    {
                      prompt: 'タグで絞り込み',
                      class: 'form-control posts__select',
                      onchange: 'submit(this.form);'
                    }
      %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mb-3 mx-auto">
      <%= link_to '質問する', new_post_path, class: 'btn btn-outline-dark btn-block question-btn' %>
    </div>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>


<% @posts.each do |post| %>
  <div class="card mb-3 mx-auto" style="width: 600px;">
    <div class="card-header">
    <hr>
      <% post.categories.each do |category| %>
        <span class="badge badge-primary"><%= category.name %></span>
      <% end %>

      <h5 class="card-title"><%= link_to "#{post.title}", post %></h5>

      <div class="media">
        <% if post.user.avatar.attached? %>
            <p><%= image_tag(rails_blob_path(post.user.avatar),:size => "50x50") %></p>
          <% else %>
            <p><%= image_tag("default_profile_image.jpg", :size => "50x50") %></p>
          <% end %>
        <div>
          <h5 class="mt-0"><%= post.user.name %></h5>
          <p class="card-text"><small class="text-muted">更新日時<%= post.updated_at.to_s(:datetime_jp) %></small></p>
        </div>
        </div>
      </div>

      <% if post.video? %>
        <% if post.video.file.content_type.include?('image/') %>
          <%= image_tag post.video.url(:thumb) %>
        <% else %>
          <%= video_tag post.video.url, width: "100%", height: "60%",
                  controls: true, autobuffer: true %>
        <% end %>
      <% end %>
    <div class="card-body">
      <p class="card-text"><%= post.content %></p>
      <hr>
      <%= link_to '詳細', post, class: 'btn btn-outline-dark' %>
    </div>
  </div>
<% end %>

<%= paginate @posts %>