<div class="card">
  <div class="card-header">
    <h4><%= post.title %></h4>
    <% post.tags.each do |tag| %>
      <span class="badge badge-primary"><%= tag.name %></span>
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(post.content) %></p>
    <p class="text-right font-weight-bold mr-10">作成者名</p>
  </div>
</div>